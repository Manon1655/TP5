{% extends 'base.html.twig' %}

{% block title %}Fiche catégorie{% endblock %}

{% block body %}
<h1 class="text-center pt-2">Fiche Catégorie</h1>

<div class="row">
    <div class="card mb-3 container">
        <h5 class="card-header">{{laCategorie.libelle}}</h5>
        <div class="row">
            <div class="col-2 d-flex align-items-center">
                 <img class="avatar mx-auto my-3" style="height: auto; max-width: 200%; display: block;" src=" {{laCategorie.image}} ">
            </div>
            <div class="col"> <ul class="list-group list-group-flush">
            <li class="list-group-item">{{ laCategorie.description}}</li>
        </ul>
        </div>
        </div>
     </div> 
     <a href="{{path('categories')}}" class="btn btn-primary btn-block text-center">Revenir à la liste</a>  
</div>

{% endblock %}
